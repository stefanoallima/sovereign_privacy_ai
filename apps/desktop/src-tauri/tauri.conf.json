{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sovereign AI",
  "version": "0.2.0",
  "identifier": "com.privateassistant.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Sovereign AI",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENENTY0ODQ0RTdFQUY3MzYKUldRMjkrcm5SRWhXemVEOS9QTnZYNXRBZFBqMkVnVDM4cElIMzZKMHJ1alBSNzkzUGd0ekFMZzkK",
      "endpoints": [
        "https://github.com/stefanoallima/sovereign_privacy_ai/releases/latest/download/latest.json"
      ]
    }
  }
}
